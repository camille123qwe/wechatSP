/* pages/shop/shop.wxss */
.store_view{
  width: 100%;
  height: 208rpx;
  display: flex;
  flex-direction: row;
  padding: 16rpx 16rpx 16rpx 32rpx;
  border-top:solid 1px #eaeaea;
  border-bottom:solid 1px #eaeaea;
}
.storeface{
  width: 222rpx;
  height: 166rpx;
}
.noflex{
  clear: both;
  display: block;
  margin-top: 20rpx;
  text-align: center;
}
.text_left{
  text-align: left;
}
.flex-item{
  flex:0 0 40%;
}
.flex-item2{
  flex: 0 0 20%;
}
.icon_img image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.icon_img p{
  padding-top: 20rpx;
}
.store_service,.hot_goods{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  border-bottom:solid 1px #eaeaea;
}
.pleft{
  padding-left:32rpx; 
}
.hot_goods{
  background: #f2f2f2;
}
.hot_view{
  width:100%;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.flex-img{
  flex: 0 0 auto;
  padding: 10rpx;
}

image{
  width:355rpx;
  height: 200rpx;
}
