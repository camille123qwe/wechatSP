/* pages/miaosha/miaosha.wxss */
.goods-wrap{
  background: #f7f7f7;
  width: 100%;
  min-height: 100%;
  position: absolute;

}
.redyouzi{
  bottom: -100rpx;
}
.goods-detail{
  width: 100%;
  height: 224rpx;
  display: flex;
  border-top: solid 1rpx #ddd;
  background: #fff;
  padding:0 20rpx;
  position: relative;
}

.goods-image{
  margin: 12rpx 28rpx 12rpx 0;
  width: 260rpx;
  height: 200rpx;
}
.goods-image image{
  width: 260rpx;
  height: 200rpx;
}
.goods-info{
  margin-top: 30rpx;
  width: 290rpx;
 flex: 0 0 auto;
}
.goods-name{
  margin-bottom: 30rpx;
  font-size: 28rpx;
    height:78rpx;
  display:inline-block;
  width:290rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  font-size: 36rpx;
  font-family: Arial;
  color: #fb3b07;
}
.price .fuhao{
  font-size: 22rpx;
  color: #fb3b07;
  font-family: Arial;
}
.marketprice{
  font-size: 24rpx;
  color: #888;
  font-family: Arial;
  text-decoration: line-through;
}
button{
  width:130rpx;
  height:50rpx;
  font-size:24rpx;
  background: #fb3b07;
  color: #fff;
  line-height: 50rpx;
  position: absolute;
  top: 116rpx;
  right: 60rpx;
}